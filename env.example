# Flask Configuration
FLASK_ENV=production
FLASK_APP=quran_api.app.wsgi:app
SECRET_KEY=change-me-in-production

# Database
DATABASE_URL=postgresql+psycopg://user:pass@localhost:5432/quran
SQLITE_DATABASE_URL=sqlite:///quran_dev.db

# Media Files
MEDIA_ROOT=/srv/quran-api/media

# CORS
CORS_ORIGINS=https://gold.encryptosystem.com,https://encryptosystem.com

# JWT Configuration
JWT_SECRET=change-me-in-production
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=2592000

# Rate Limiting
RATE_LIMIT_DEFAULT=60 per minute
RATE_LIMIT_AUTH=10 per minute

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Scheduler
SCHEDULER_TIMEZONE=UTC
SCHEDULER_REVIEW_TIME=03:00 